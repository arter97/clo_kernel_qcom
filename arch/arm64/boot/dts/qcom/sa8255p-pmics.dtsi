/ {
	thermal-zones {
		pmm8654au_0_thermal: pm8255-0-thermal {
			polling-delay-passive = <100>;
			polling-delay = <0>;

			trips {
				trip0 {
					temperature = <105000>;
					hysteresis = <0>;
					type = "passive";
